{
    "plugins": ["boundaries"],
    "extends": ["plugin:boundaries/recommended"],
    "settings": {
        "import/resolver": {
            "typescript": {
                "alwaysTryTypes": true
            }
        },
        "boundaries/include": ["src/**/*"],
        "boundaries/elements": [
            {
                "mode": "full",
                "type": "shared",
                "pattern": [
                    "src/@types/**/*",
                    "src/assets/**/*",
                    "src/components/**/*",
                    "src/config/**/*",
                    "src/constants/**/*",
                    "src/hooks/**/*",
                    "src/libs/**/*",
                    "src/schemas/**/*",
                    "src/server/**/*",
                    "src/styles/**/*",
                    "src/utils/**/*"
                ]
            },
            {
                "mode": "full",
                "type": "feature",
                "capture": ["featureName"],
                "pattern": ["src/features/*/**/*"]
            },
            {
                "mode": "full",
                "type": "app",
                "capture": ["_", "fileName"],
                "pattern": ["src/app/**/*"]
            },
            {
                "mode": "full",
                "type": "neverImport",
                "pattern": ["src/*"]
            }
        ]
    },
    "rules": {
        "boundaries/no-unknown": ["error"],
        "boundaries/no-unknown-files": ["error"],
        "boundaries/no-private": "off",
        "boundaries/element-types": [
            "error",
            {
                "default": "disallow",
                "rules": [
                    {
                        "from": ["shared"],
                        "allow": ["shared"]
                    },
                    {
                        "from": ["feature"],
                        "allow": [
                            "shared",
                            [
                                "feature",
                                { "featureName": "${from.featureName}" }
                            ]
                        ]
                    },
                    {
                        "from": ["app", "neverImport"],
                        "allow": ["shared", "feature"]
                    }
                ]
            }
        ]
    }
}
