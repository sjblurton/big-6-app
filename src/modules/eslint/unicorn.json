{
    "plugins": ["unicorn"],
    "extends": "plugin:unicorn/recommended",
    "rules": {
        "unicorn/filename-case": [
            "error",
            {
                "cases": {
                    "kebabCase": true,
                    "pascalCase": true
                }
            }
        ],
        "unicorn/prevent-abbreviations": [
            "error",
            {
                "replacements": {
                    "e": {
                        "event": true
                    },
                    "res": false,
                    "cmd": {
                        "command": true
                    },
                    "errCb": {
                        "handleError": true
                    },
                    "props": {
                        "properties": true
                    },
                    "args": {
                        "arguments": false
                    },
                    "Params": {
                        "parameters": true
                    }
                }
            }
        ],
        "unicorn/better-regex": "error"
    }
}
