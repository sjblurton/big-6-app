{
    "extends": ["plugin:storybook/recommended"],
    "overrides": [
        {
            "files": ["*.stories.ts,*.stories.tsx"],
            "extends": ["plugin:storybook/recommended"],
            "rules": {
                "import/no-extraneous-dependencies": "off"
            }
        },
        {
            "files": ["*.mdx"],
            "extends": "plugin:mdx/recommended",
            "rules": {
                "react/jsx-filename-extension": "off"
            }
        }
    ]
}
